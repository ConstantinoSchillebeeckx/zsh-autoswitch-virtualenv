#!/usr/bin/env zunit


@setup {
    export DISABLE_AUTOSWITCH_VENV="1"
    load "../autoswitch_virtualenv.plugin.zsh"
    TARGET="$(mktemp -d)"
}

@teardown {
    rm -rf "$TARGET"
}

@test 'test finds in base directory' {
    touch "$TARGET/.venv"

    run _check_venv_path "$TARGET"

    assert $state equals 0
    assert "$output" same_as "$TARGET/.venv"
}

@test 'returns nothing if not found' {
   run _check_venv_path "$TARGET"

   assert $state equals 0
   assert "$output" is_empty
}

@test 'finds .venv in parent directories' {
    touch "$TARGET/.venv"
    mkdir "$TARGET/foo"

    run _check_venv_path "$TARGET/foo"

    assert $state equals 0
    assert "$output" same_as "$TARGET/.venv"
}

@test 'returns nothing with root path' {
    run _check_venv_path '/'

    assert $state equals 0
    assert "$output" is_empty
}
