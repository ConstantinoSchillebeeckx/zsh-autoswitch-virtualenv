#!/usr/bin/env zunit

@test 'prints help message and disables plugin if virtualenvwrapper not setup' {
    run load ../autoswitch_virtualenv.plugin.zsh

    assert $status equals 0
    assert "$lines[1]" contains "zsh-autoswitch-virtualenv requires virtualenvwrapper to be installed!"
    assert "$lines[2]" is_empty
    assert "$lines[3]" contains "If this is already installed but you are still seeing this message, add the following to your ~/.zshrc"
    assert "$lines[4]" contains "source =virtualenvwrapper.sh"
    assert "$lines[5]" is_empty
    assert "$lines[6]" contains "See https://github.com/MichaelAquilina/zsh-autoswitch-virtualenv#Setup for more details"
    assert ${#lines} equals 7
}
